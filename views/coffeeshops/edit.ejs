<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center"> 
            <h1>Edit <%= coffeeshop.name %></h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/coffeeshops/<%= coffeeshop._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="coffeeshop[name]" value="<%= coffeeshop.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="coffeeshop[address]" value="<%= coffeeshop.address %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="coffeeshop[image]" value="<%= coffeeshop.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="coffeeshop[description]" value="<%= coffeeshop.description %>">
                </div>
                 <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
             <a href="/coffeeshops/">Back to Coffeeshops</a>
        </div>
    </div>
</div>
       

    <% include ../partials/footer %>